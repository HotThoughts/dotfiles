// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "ui_font_family": "SF Pro",
  "ui_font_size": 15,
  "icon_theme": "Symbols",
  "git_panel": {
    "dock": "right"
  },
  "agent": {
    "profiles": {
      "write": {
        "name": "Write",
        "tools": {
          "copy_path": true,
          "create_directory": true,
          "create_file": true,
          "delete_path": true,
          "diagnostics": true,
          "edit_file": true,
          "fetch": true,
          "list_directory": true,
          "move_path": true,
          "now": true,
          "find_path": true,
          "read_file": true,
          "grep": true,
          "terminal": true,
          "thinking": true,
          "web_search": true
        },
        "enable_all_context_servers": true,
        "context_servers": {
          "mcp-server-context7": {
            "tools": {
              "resolve-library-id": true,
              "get-library-docs": true
            }
          }
        }
      }
    },
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    },
    "default_profile": "write",
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4"
    },
    "model_parameters": [],
    "always_allow_tool_actions": true,
    "version": "2"
  },
  "base_keymap": "VSCode",
  "buffer_font_size": 16,
  "buffer_font_family": "Operator Mono Lig",
  "buffer_font_fallbacks": ["Hack Nerd Font"],
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Catppuccin Espresso (Blur)"
  },
  "languages": {
    "YAML": {
      "format_on_save": "on"
    }
  },
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "always",
    "use_smartcase_find": true,
    "use_multiline_find": true,
    "toggle_relative_line_numbers": true
  },
  "experimental.theme_overrides": {
    "players": [
      {
        "cursor": "#ff5f00",
        "background": "#ff5f00ff",
        "selection": "#ff5f003d"
      }
    ]
  },
  "terminal": {
    "blinking": "on",
    "font_family": "Operator Mono Lig"
  },
  "autosave": "on_focus_change",
  // "toolbar": {
  //   "breadcrumbs": true,
  //   "quick_actions": true,
  //   "selections_menu": true,
  //   "agent_review": true,
  //   "code_actions": true
  // },
  "inline_code_actions": true,
  "symbols.folders.associations": {
    "infra": "folder-purple-code",
    "static": "folder-constants",
    "backup": "folder-gray",
    "cluster": "folder-config",
    "dev": "folder-green",
    "staging": "folder-yellow",
    "production": "folder-red"
  }
}
