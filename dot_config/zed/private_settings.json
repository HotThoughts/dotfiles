{
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "context_servers": {
    "mcp-server-github": {
      "enabled": true,
      "settings": {}
    },
    "mcp-server-context7": {
      "enabled": true,
      "settings": {}
    }
  },
  "ssh_connections": [
    {
      "host": "raspberryzero",
      "username": "pi",
      "args": [],
      "projects": [
        {
          "paths": [
            "/home/pi"
          ]
        }
      ]
    }
  ],
  "edit_predictions": {
    "mode": "eager",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null,
      "enterprise_uri": null
    },
    "enabled_in_text_threads": false
  },
  "ui_font_family": "SF Pro",
  "ui_font_size": 15,
  "icon_theme": "Symbols",
  "git_panel": {
    "dock": "left"
  },
  "agent": {
    "default_open_ai_model": "gpt-5.1",
    "profiles": {
      "write": {
        "name": "Write",
        "tools": {
          "open": true,
          "copy_path": true,
          "create_directory": true,
          "create_file": true,
          "delete_path": true,
          "diagnostics": true,
          "edit_file": true,
          "fetch": true,
          "list_directory": true,
          "move_path": true,
          "now": true,
          "find_path": true,
          "read_file": true,
          "grep": true,
          "terminal": true,
          "thinking": true,
          "web_search": true
        },
        "enable_all_context_servers": true,
        "context_servers": {
          "mcp-server-context7": {
            "tools": {
              "resolve-library-id": true,
              "get-library-docs": true
            }
          }
        }
      }
    },
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    },
    "default_profile": "write",
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4.5"
    },
    "model_parameters": [],
    "always_allow_tool_actions": true
  },
  "base_keymap": "VSCode",
  "buffer_font_size": 16,
  "buffer_font_family": "Operator Mono Lig",
  "buffer_font_fallbacks": [
    "Hack Nerd Font"
  ],
  "theme": {
    "mode": "system",
    "light": "Catppuccin Espresso (Blur)",
    "dark": "Catppuccin Espresso (Blur) [Light]"
  },
  "languages": {
    "YAML": {
      "format_on_save": "off",
      "formatter": "language_server"
    }
  },
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "always",
    "use_smartcase_find": true,
    "use_multiline_find": true,
    "toggle_relative_line_numbers": true
  },
  "experimental.theme_overrides": {
    "players": [
      {
        "cursor": "#ff5f00",
        "background": "#ff5f00ff",
        "selection": "#ff5f003d"
      }
    ]
  },
  "terminal": {
    "blinking": "on",
    "font_family": "Operator Mono Lig"
  },
  "autosave": "on_focus_change",
  "inline_code_actions": true,
  "symbols.folders.associations": {
    "infra": "folder-purple-code",
    "static": "folder-constants",
    "backup": "folder-gray",
    "cluster": "folder-config",
    "dev": "folder-green",
    "staging": "folder-yellow",
    "production": "folder-red"
  },
  "lsp": {
    "yaml-language-server": {
      "settings": {
        "yaml": {
          "keyOrdering": false,
          "schemas": {
            "https://json.schemastore.org/bower.json": [
              "/*"
            ],
            "../relative/path/schema.json": [
              "/config*.yaml"
            ]
          }
        }
      }
    }
  }
}
